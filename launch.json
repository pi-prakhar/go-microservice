{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Connect to Docker",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/app",       // The path inside the Docker container
            "port": 8001,              // The port exposed by Delve
            "host": "127.0.0.1",        // The localhost
            "program": "${workspaceFolder}",
            "showLog": true
        }
    ]
}
